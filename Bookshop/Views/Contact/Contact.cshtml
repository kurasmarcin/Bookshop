@page
@model Bookshop.Models.Contact
@if (ViewBag.Message != null)
{
    <div class="alert alert-success">
        @ViewBag.Message
    </div>
}

<div class="contact-container">
    <div class="contact-info">
        <h2>Księgarnia internetowa <span style="color: blue;">Bookshop</span></h2>
        <h3>Skontaktuj się z nami</h3>
        <p>
            <strong style=";">Adres korespondencyjny:</strong><br />
            ul.  Poznań
        </p>
        <p>
            <strong style="color: blue;">Email:</strong><br />
            bookshopcontact@gmail.com
        </p>
        <p>
            <strong style="color: blue;">Telefon:</strong><br />
            000 000 000 
        </p>
    </div>

    <div class="contact-form">
        <h2>Formularz <span style="color: blue;">Kontaktowy</span></h2>
        <form method="post">
            <div class="form-group">
                <label for="fullName">Imię i Nazwisko:</label>
                <input type="text" id="fullName" name="fullName" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="email">Twój Email:</label>
                <input type="email" id="email" name="email" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="subject">Temat:</label>
                <input type="text" id="subject" name="subject" class="form-control" required>
            </div>

            <div class="form-group">
                <label for="message">Treść wiadomości:</label>
                <textarea id="message" name="message" class="form-control" rows="5" required></textarea>
            </div>

            <button type="submit" class="btn btn-primary" style="background-color: orange; color: white;">Wyślij</button>
        </form>
    </div>
</div>
